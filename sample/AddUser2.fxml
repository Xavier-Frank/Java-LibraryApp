   <children>
      <ImageView fitHeight="72.0" fitWidth="78.0" layoutX="8.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@adduser.png" />
         </image>
      </ImageView>
      <Separator layoutX="6.0" layoutY="76.0" prefHeight="2.0" prefWidth="305.0" />
      <Separator layoutX="8.0" layoutY="333.0" prefHeight="11.0" prefWidth="305.0" />
      <Label fx:id="errorChecker" alignment="CENTER" layoutX="6.0" layoutY="315.0" prefHeight="18.0" prefWidth="305.0" textFill="#dd1717" />
      <Button id="SaveButton" fx:id="SaveButton" layoutX="6.0" layoutY="343.0" mnemonicParsing="false" onAction="#SaveButtonPressed" prefHeight="38.0" prefWidth="150.0" stylesheets="@application.css" text="SAVE" textFill="#141413" />
