         <children>
            <Label prefHeight="16.0" prefWidth="165.0" text="User ID/Reg No:">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="UserId" promptText="e.g 3769845 / S13/09420/17" />
            <Label prefHeight="16.0" prefWidth="90.0" text="First Name:">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="FirstName" promptText="e.g Xavier" />
            <Label text="Last Name:">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="LastName" promptText="e.g Stephens" />
            <Label prefHeight="16.0" prefWidth="56.0" text="Class:">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="Class" promptText="year 1/2/3/4/5/6 " />
            <Label text="Faculty:">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <TextField fx:id="Faculty" promptText="e.g Faculty of Science" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
